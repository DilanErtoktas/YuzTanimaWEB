@model FaceNew.Models.Entity.kamera
@{ ViewBag.Title = "KameraGetir";
    Layout = "~/Views/Shared/Layout.cshtml"; }

@using (Html.BeginForm("KameraGuncelle", "Kameralar", FormMethod.Post))
{
<div style="margin-bottom:15px"></div>
                <div class="form-group">
                    @Html.LabelFor(k => k.kamera_IP)
                    @Html.TextBoxFor(k => k.kamera_IP, new { @class = "form-control" })
                    <br />
                    <label>Personel Id</label>
                    @Html.TextBoxFor(k => k.personel_ID, new { @class = "form-control" })
                    <label>Firma Id</label>
                    @Html.TextBoxFor(k => k.firma_ID, new { @class = "form-control" })
                    <label>Kamera Konum</label>
                    @Html.TextBoxFor(k => k.kamera_konum_isimlendirme, new { @class = "form-control" })
                    
                </div>
                                <div>
                                    <button class="btn btn-danger">Güncelle</button>
                                </div>}