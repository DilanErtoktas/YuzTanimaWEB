@using FaceNew.Models.Entity
@model List<personel>
@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/Layout.cshtml"; }

<h2 class="well">Personeller</h2>

<div style="margin-bottom:15px; margin-top:15px;">
    <input type="text" class="form-control" placeholder="Personel Ara" />
</div>

<table class="table table-bordered">
    <tr class=" alert-success">
        <th>Personel Id</th>
        <th>Kullanici Adi</th>
        <th>Kullanici Sifre</th>
        <th>Kimlik No</th>
        <th>Firma ID</th>
        <th>Personel Adi Soyadi</th>
        <th>Personel Mail</th>
        <th>Personel Adres</th>
        <th>Personel Telefon</th>
        <th>Personel Birimi</th>
        <th>Personel Ziyaret</th>
        <th>Personel Maaş</th>
        <th>Personel Mesai</th>
        <th>Personel Oda Id</th>
        <th>Personel Resim</th>
        <th>Personel Anahtar</th>
        <th>Personel Sil</th>
        <th>Personel Güncelle</th>
    </tr>
    @foreach (var prs in Model)
    {
<tr>
    <td>@prs.personel_ID</td>
    <td>@prs.kullanıcı_ADI</td>
    <td>@prs.kullanıcı_sifre</td>
    <td>@prs.kimlik_numarası</td>
    <td>@prs.firma_ID</td>
    <td>@prs.Padsoyad</td>
    <td>@prs.mail</td>
    <td>@prs.adres</td>
    <td>@prs.telefon</td>
    <td>@prs.birim_ID</td>
    <td>@prs.ziyaret_saatleri</td>
    <td>@prs.maas</td>
    <td>@prs.mesai</td>
    <td>@prs.oda_ID</td>
    <td>@prs.personel_resim</td>
    <td>@prs.personel_anahtar</td>
    <td><a href="/Personel/PersonelSil/@prs.personel_ID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Personel/PersonelGetir/@prs.personel_ID" class="btn btn-success">Güncelle</a></td>


</tr>}
</table>
<a href="/Personel/PersonelEkle" class="btn btn-primary">Yeni Personel Ekle</a>