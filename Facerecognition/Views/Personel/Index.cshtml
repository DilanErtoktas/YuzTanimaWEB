@using Facerecognition.Models.Entity
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 class="well">Personeller</h2>

<div style="margin-bottom:15px; margin-top:15px;">
    <input type="text" class="form-control" placeholder="Personel Ara" />
</div>

<table class="table table-bordered">
    <tr class=" alert-success">
        <th>Personel Id</th>
        <th>Kullanici Adi</th>
        <th>Kullanici Sifre</th>
        <th>Kimlik No</th>
        <th>Firma ID</th>
        <th>Personel Adi</th>
        <th>Personel Soyadi</th>
        <th>Personel Mail</th>
        <th>Personel Adres</th>
        <th>Personel Telefon</th>
        <th>Personel Birimi</th>
        <th>Personel Giriş</th>
        <th>Personel Çıkış</th>
        <th>Personel Ziyaret</th>
        <th>Personel Maaş</th>
        <th>Personel Mesai</th>
        <th>Personel Oda Id</th>
        <th>Personel Sil</th>
        <th>Personel Güncelle</th>
    </tr>
    @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.personelid</td>
            <td>@prs.kullaniciadi</td>
            <td>@prs.kullanicisifre</td>
            <td>@prs.kimlikno</td>
            <td>@prs.firmaid</td>
            <td>@prs.personeladi</td>
            <td>@prs.personelsoyadi</td>
            <td>@prs.personelmail</td>
            <td>@prs.adres</td>
            <td>@prs.telefon</td>
            <td>@prs.birimi</td>
            <td class=" alert-danger">@prs.giriszamani</td>
            <td class=" alert-danger">@prs.cikiszamani</td>
            <td>@prs.ziyaretsaati</td>
            <td>@prs.maas</td>
            <td>@prs.mesai</td>
            <td>@prs.odaid</td>
            <td><a href="/Personel/PersonelSil/@prs.personelid" class="btn btn-danger">Sil</a></td>
            <td><a href="/Personel/PersonelGetir/@prs.personelid" class="btn btn-success">Güncelle</a></td>


        </tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-primary">Yeni Personel Ekle</a>

